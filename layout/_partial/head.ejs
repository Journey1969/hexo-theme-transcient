<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <% var title = page.title || config.title; %>
  <title><%= title %></title>
  <meta name="author" content="<%= theme.meta.author %>">
  <meta name="description" content="<%= theme.meta.description %>">
  <meta name="keywords" content="<%= theme.meta.keywords %>">
  <meta property="og:title" content="<%= title %>">
  <meta property="og:type" content="<%= theme.meta.og.type.article %>">
  <meta property="og:url" content="<%= config.url %>/<%= page.path %>">
  <meta property="og:site_name" content="<%= theme.meta.og.site_name %>">
  <meta property="og:description" content="<%= theme.meta.og.description %>">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Mono" rel="stylesheet">
  <link href="//cdn.bootcss.com/fancybox/3.0.47/jquery.fancybox.min.css" rel="stylesheet">
  <%- css('css/style') %>
</head>
