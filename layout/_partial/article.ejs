<article class="post">
  <header class="post-header">
    <% if (index) { %>
      <h1 class="post-title"><a class="in-index" href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
    <% } else { %>
      <h1 class="post-title"><a><%= post.title %></a></h1>
      <p class="post-detail">&rArr; Posted on <%= date(post.date, 'YYYY/MM/DD') %></p>
    <% } %>
  </header>
  <% if (post.excerpt && index){ %>
    <div class="post-content"><%- post.excerpt %></div>
    <% if (theme.excerpt_link){ %>
     <p class="read-more-link">
       <a href="<%- url_for(post.path) %>"><%= theme.excerpt_link %></a>
     </p>
    <% } %>
  <% } else { %>
    <div class="post-content"><%- post.content %></div>
  <% } %>

  <% if(index) { %>
    <div class="seperate-bar"></div>
  <% } %>
</article>
