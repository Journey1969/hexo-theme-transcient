#archive-container
  padding: 1rem

  .archive-item
    display: flex
    max-width: 500px
    line-height: 1.2rem
    margin: 0.5rem auto

    .archive-month-day
      min-width: 5rem
      color: #276bc4
      text-align: center
      font-size: 0.9rem
      font-family: "Roboto mono"

    .archive-title
      color: #000
      &:visited
        color: #000
      &:hover
        color: #276bc4

  .archive-year
    max-width: 500px
    margin: 1.5rem auto 0rem
    padding-bottom: 0.5rem
    font-size: 1.5rem
    color: #276bc4
    border-bottom: 1px dashed #666
