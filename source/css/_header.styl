#header
  background: -webkit-linear-gradient(240deg, #00CED1, #4169E1)

#header-container
  max-width: 900px
  height: 160px
  padding: 1rem
  margin: 0 auto

  display: flex
  flex-direction: column
  justify-content:  flex-end
  align-items: center

#header-title
  margin-bottom: 3rem
  position: relative

  color: #fff
  font-size: 2.5rem
  &:before
    content: url('data:image/png;base64,')
    position: absolute
    left: -45px
    top: 5px

#header-nav
  display: flex

  .header-nav-link
    padding-right: 1rem
    color: #ddd
    &:hover
      color: #fff;
