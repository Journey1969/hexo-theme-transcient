#header
  background: -webkit-linear-gradient(240deg, #00CED1, #4169E1)

#header-container
  max-width: container-max-width
  height: 240px
  padding: 1rem
  margin: 0 auto
  box-sizing: border-box

  display: flex
  flex-direction: column
  justify-content:  flex-end
  align-items: center

#header-title
  width: 100%
  flex: 1
  background-repeat: no-repeat
  background-position: center center
  background-image: url('data:image/png;base64,')

#header-nav
  display: flex
  .header-nav-link
    margin: 0 0.8rem
    color: site-main-light-gray
    &:visited
      color: site-main-light-gray
    &:hover
      color: color-white
