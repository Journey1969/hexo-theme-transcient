.post
  width: 100%
  margin: 0 auto
  padding: 1rem
  box-sizing: border-box

  h1
    font-size: 2rem
    margin: 1rem 0

  h2
    font-size: 1.6rem
    margin: 0.8rem 0

  h3
    font-size: 1.4rem
    margin: 0.6rem 0

  h4
    font-size: 1.2rem
    margin: 0.6rem 0

  h5
    font-size: 1rem
    margin: 0.6rem 0

  h6
    font-size: 1rem
    margin: 0.6rem 0

  hr
    margin: 1rem 0

  br
    line-height: 0

  .img-broken
    .img-not-found
      width: 300px
      margin: 0 auto
      background-color: #eee

  .img-wrapper
    width: 100%
    margin: 1rem 0
    padding: 1rem 0

    display: flex
    flex-direction: column
    transition: height 0.3s linear

    .fancybox
      margin: 0 auto
      display: inline-block
      img
        max-width: 100%
        max-height: 400px
        box-sizing: border-box
        transition: opacity 0.3s linear
      .img-loaded
        border: 10px solid #eee
        background-repeat: no-repeat
        background-position: -9999px -9999px

    .img-caption
      text-align: center
      color: #aaa
      font-size: 14px

  p
    line-height: 2rem

  code
    padding: 1px 2px
    margin: 0 2px

    box-sizing: border-box
    border: 1px solid #ddd
    border-radius: 2px
    background-color: #F8F8F8

    font-family: "Consolas"

  ul, ol
    list-style-position: inside
    margin: 0.5rem 0
    padding-left: 1rem

  li
    line-height: 1.5rem

  .highlight
    margin: 2rem 1rem
    border-radius: 5px
    position: relative
    overflow: auto

    font-size: 16px
    box-shadow: 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12), 0 2px 4px -1px rgba(0,0,0,.2)
    background-color: #292929

    &:before
      content: attr(data-code-type)
      position: absolute
      top: 0
      left: 0

      color: #fff
      font-family: "Consolas"
      text-indent: 1rem
      line-height: 2rem

    &::-webkit-scrollbar-track
      background-color: #444
      border-radius: 5px

    &::-webkit-scrollbar
    	width: 10px

    &::-webkit-scrollbar-thumb
      border-radius: 5px
      background-color: rgba(#808080, 0.4)

    table
      width: 100%
      border-spacing: 0
      border-top: 2rem solid #393939

    tbody
      display: block
      padding: 1rem

    span, .line
      color: #fff
      font-size: 0.9rem
      font-family: "Consolas"
      &::selection
        color: #fff
        background: #00BFFF

    .line
      height: 1.5rem
      line-height: 1.5rem

  @import "_highlight"
