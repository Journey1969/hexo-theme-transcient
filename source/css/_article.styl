.post
  width: 100%
  margin: 0 auto
  padding: 1rem
  box-sizing: border-box

.post-header
  margin-bottom: 2rem
  .post-title
    font-size: 2rem
    a
      color: color-black
    .in-index
      &:visited
        color: color-black
      &:hover
        color: site-main-blue

  .post-detail
    margin-top: 0.5rem
    padding-bottom: 0.5rem
    border-bottom: 1px dashed site-main-gray
    color: site-main-gray
    font-size: 1rem

.post-content
  h1
    font-size: 2rem
    margin: 1rem 0

  h2
    font-size: 1.6rem
    margin: 0.8rem 0

  h3
    font-size: 1.4rem
    margin: 0.6rem 0

  h4
    font-size: 1.2rem
    margin: 0.6rem 0

  h5
    font-size: 1rem
    margin: 0.6rem 0

  h6
    font-size: 1rem
    margin: 0.6rem 0

  hr
    margin: 1rem 0

  br
    line-height: 0

  .img-broken
    .img-not-found
      width: 300px
      margin: 0 auto
      background-color: site-main-light-gray

  .img-wrapper
    width: 100%
    margin: 1rem 0
    padding: 1rem 0

    display: flex
    flex-direction: column
    transition: height 0.3s linear

    .fancybox
      margin: 0 auto
      display: inline-block
      img
        max-width: 100%
        max-height: 400px
        box-sizing: border-box
      .img-loaded
        border: 5px solid site-main-very-light-gray
        background-repeat: no-repeat
        background-position: -9999px -9999px

    .img-caption
      text-align: center
      color: site-main-gray
      font-size: 14px

  p
    line-height: 2rem

  code
    padding: 0 5px
    border-radius: 3px
    border: 1px solid site-main-light-gray
    box-sizing: border-box
    background-color: site-main-very-light-gray
    font-size: 0.9rem
    font-family: "Roboto Mono"

  ul, ol
    list-style-position: inside
    margin: 0.5rem 0
    padding-left: 1rem

  li
    line-height: 1.5rem

  blockquote
    max-width: 100%
    margin: 1rem 0
    p
      padding: 1rem
      background-color: site-main-very-light-gray
      color: site-main-black
      border-left: 5px solid site-main-light-gray
      box-sizing: border-box

  .highlight
    margin: 1rem 0
    border-radius: 5px
    position: relative
    overflow: auto

    font-size: 16px
    box-shadow: 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12), 0 2px 4px -1px rgba(0,0,0,.2)
    background-color: #292929

    &:before
      content: attr(data-code-type)
      position: absolute
      top: 0
      left: 0

      color: #fff
      font-family: "Roboto Mono"
      font-size: 0.8rem
      text-indent: 1rem
      line-height: 1.5rem

    &::-webkit-scrollbar-track
      background-color: site-main-black
      border-radius: 5px

    &::-webkit-scrollbar
    	width: 10px

    &::-webkit-scrollbar-thumb
      border-radius: 5px
      background-color: rgba(#808080, 0.4)

    .gutter
      padding: 0 1rem 0 0.5rem
      .line
        color: site-main-gray

    table
      width: 100%
      border-spacing: 0
      border-top: 1.5rem solid #393939

    tbody
      display: block
      padding: 0.5rem

    span, .line
      color: #fff
      font-size: 0.8rem
      font-family: "Roboto Mono"
      &::selection
        color: color-white
        background: site-main-blue

    .line
      height: 1.5rem
      line-height: 1.5rem

  @import "_highlight"
